%h1 New Notepad

- if @note.errors.any?
  .alert.alert-danger
    - @note.errors.full_messages.each do |msg|
      = msg

= render 'notes/form'

%h1 My notepads

%table.table
  - @notes.all.each_with_index do |note, index|
    %tr
      %td
        = link_to note.name, note.name
      %td
      %td
        .btn-group.pull-right
          %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
            Actions
            %span.caret
          %ul.dropdown-menu
            %li
              = link_to '#', class: 'dropdown-item' do
                %span.glyphicon.glyphicon-download-alt
                Download
            %li
              = link_to note, method: :delete, data: { confirm: "Are you sure you want to destroy #{note.name}?" }, class: 'dropdown-item' do
                %span.glyphicon.glyphicon-trash
                Destroy
